<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tvChangeBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Dark Mode" />

        <Switch
            android:id="@+id/bcswitch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=""
            android:paddingRight="10dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp" />


    </LinearLayout>


    <!-- Layout for the Text Size section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/textSize"
            android:text="text size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@color/white" />


        <ImageButton
            android:id="@+id/buttonDecreaseTextSize"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:contentDescription="Decrease text size"
            android:background="@drawable/bg_driver_message"
            android:elevation="4dp"
            android:clickable="true"/>


        <ImageButton
            android:id="@+id/btnisize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:contentDescription="Increase text size"
            android:background="@drawable/bg_user_message"
            android:elevation="4dp"
            android:clickable="true"/>
    </LinearLayout>
    <!-- Delete Account Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:text="DELETE account"
        android:elevation="4dp"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:background="#2196F3"
        android:elevation="4dp">

        <!-- Navigation Buttons -->
        <ImageButton
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="0"
            android:src="@drawable/icon1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/ride"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="0"
            android:src="@drawable/icon2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/maps"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="0"
            android:src="@drawable/icon3"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="0"
            android:src="@drawable/icon4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/account"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="0"
            android:src="@drawable/icon5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />
    </LinearLayout>

</RelativeLayout>
