<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedback_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".feedback">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/back"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="0dp"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:text="ðŸš— Carpool"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Driver RatingBar -->
    <TextView
        android:id="@+id/rate_driver_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topPanel"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Rate Your Driver"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate_driver_label"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:isIndicator="false"
        android:theme="@style/Widget.AppCompat.RatingBar.Indicator"/>

    <!-- Feedback Title -->
    <TextView
        android:id="@+id/feedback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_bar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Feedback"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Feedback Input -->
    <EditText
        android:id="@+id/feedback_input"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/feedback_title"
        android:layout_margin="16dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@color/white"
        android:hint="Write your feedback here..."
        android:gravity="start|top"
        android:padding="16dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#2196F3"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/icon1"
            android:contentDescription="Home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/ride"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/icon2"
            android:contentDescription="Ride"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/mapZ"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/icon3"
            android:contentDescription="Map"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/icon4"
            android:contentDescription="Chat"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/account"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/icon5"
            android:contentDescription="Account"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
